<div class="animated fadeIn retraso">
    <div class="form-signin">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2 class="form-signin-heading">¡Regístrate!</h2>
        <p align="center">Alumnos y maestros CBTis 204</p>
        <hr class="colorgraph"><br>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Correo" %>
        <%= f.label :contraseña %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Contraseña" %>
        <%= f.label :confirma_tu_contraseña %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirma tu contraseña" %>
        <%= f.submit "Regístrame", class:"btn btn-lg btn-primary btn-block" %>
        <br>
         <div align="center"><%= render "devise/shared/links" %></div>
      <%end%>
    </div>
</div>